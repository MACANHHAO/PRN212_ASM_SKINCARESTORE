<Window x:Class="BeautySky.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeautySky"
        mc:Ignorable="d"
        Title="LoginWindow" Height="515" Width="850" Background="#FAF3E0" WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize">
    <Grid>
        <!-- Background Rectangle -->
        <Rectangle HorizontalAlignment="Center" Height="380" Fill="White" 
                   RadiusX="15" RadiusY="15" Stroke="#D3D3D3" 
                   VerticalAlignment="Center" Width="700"/>

        <!-- Title -->
        <Label Content="Login" HorizontalAlignment="Left" FontSize="36" 
               FontWeight="Bold" Foreground="#FF5722" Margin="370,105,0,-65"/>

        <!-- Email Field -->
        <Label Content="Email" HorizontalAlignment="Left" Margin="170,180,0,0" 
               VerticalAlignment="Top" FontSize="16" Foreground="#333"/>
        <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" Height="40" 
                 Margin="270,176,0,0" VerticalAlignment="Top" Width="350" 
                 Padding="5" BorderBrush="#FF5722" BorderThickness="1"/>

        <!-- Password Field -->
        <Label Content="Password" HorizontalAlignment="Left" Margin="155,258,0,0" 
               VerticalAlignment="Top" FontSize="16" Foreground="#333" RenderTransformOrigin="0.544,2.353"/>
        <TextBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Height="40" 
                     Margin="270,250,0,0" VerticalAlignment="Top" Width="350" 
                     Padding="5" BorderBrush="#FF5722" BorderThickness="1"/>

        <!-- Buttons -->
        <Button Content="Login" HorizontalAlignment="Left" Height="45" Width="150" 
                Margin="220,332,0,0" VerticalAlignment="Top" Background="#FF5722" 
                Foreground="White" FontSize="16" FontWeight="Bold" BorderThickness="0"
                Cursor="Hand" Click="Button_Click"/>
        <Button Content="Quit" HorizontalAlignment="Left" Height="45" Width="150" 
                Margin="445,332,0,0" VerticalAlignment="Top" Background="#B0BEC5" 
                Foreground="White" FontSize="16" FontWeight="Bold" BorderThickness="0"
                Cursor="Hand" Click="Button_Click_1"/>

        <!-- Register Link -->
        <TextBlock HorizontalAlignment="Center" Margin="0,397,0,0" VerticalAlignment="Top">
            <Run Text="Don't have an account? " Foreground="#555"/>
            <Hyperlink Click="Register_Click">
                <Run Text="Register here" Foreground="#FF5722"/>
            </Hyperlink>
        </TextBlock>

    </Grid>
</Window>
