<Window x:Class="BeautySky.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeautySky"
        mc:Ignorable="d"
       Title="Product Manager" Height="685" Width="1305" 
        Background="#F5F5DC" WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <!-- Title Section -->
        <Label Content="Product Manager" HorizontalAlignment="Left" Height="80" 
               Margin="31,20,0,0" VerticalAlignment="Top" Width="520" 
               FontWeight="Bold" FontSize="48" Foreground="#333"/>
        <Label Content="ver. 25-SU" HorizontalAlignment="Left" Height="50" 
               Margin="510,40,0,0" VerticalAlignment="Top" Width="197" 
               FontSize="24" Foreground="#666"/>

        <!-- Search Section -->
        <Rectangle HorizontalAlignment="Left" Height="95" Margin="39,144,0,0" 
                   Stroke="Black" VerticalAlignment="Top" Width="1041" Fill="#FFD700"/>
        <Label Content="Product Name" HorizontalAlignment="Left" Height="45" 
               Margin="448,174,0,0" VerticalAlignment="Top" Width="147" 
               Foreground="#FF4500" FontSize="16"/>
        <TextBox x:Name="ProductNameTextBox" HorizontalAlignment="Left" Height="45" 
                 Margin="586,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" 
                 Width="219" TabIndex="1" Padding="5" FontSize="14" BorderBrush="#FF4500" 
                 BorderThickness="1"/>
        <Button x:Name="SearchButton" Content="Search" HorizontalAlignment="Left" Height="50" 
                Margin="879,166,0,0" VerticalAlignment="Top" Width="165" TabIndex="2" 
                Click="SearchButton_Click" Background="#FF4500" Foreground="White" 
                FontSize="16" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>

        <!-- Product List Section -->
        <Label Content="Product List" HorizontalAlignment="Left" Height="55" 
               Margin="35,274,0,0" VerticalAlignment="Top" Width="165" 
               FontSize="20" FontWeight="Bold" Foreground="#333"/>
        <DataGrid x:Name="ProductListDataGrid" HorizontalAlignment="Left" Height="289" 
                  Margin="39,320,0,0" VerticalAlignment="Top" Width="1041" 
                  AutoGenerateColumns="False" TabIndex="3" HorizontalScrollBarVisibility="Auto" 
                  FontSize="16" SelectionChanged="ProductListDataGrid_SelectionChanged" 
                  GridLinesVisibility="Horizontal" BorderBrush="#D3D3D3" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Product ID" Binding="{Binding ProductId}" Width="60"/>
                <DataGridTextColumn Header="Product Name" Binding="{Binding ProductName}" Width="200"/>
                <DataGridTextColumn Header="Price ($)" Binding="{Binding Price}" Width="120"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="100"/>
                <DataGridTextColumn Header="Category ID" Binding="{Binding CategoryId}" Width="140"/>
                <DataGridTextColumn Header="Skin Type ID" Binding="{Binding SkinTypeId}" Width="140"/>
                <DataGridTextColumn Header="Category Name" Binding="{Binding Category.CategoryName}" Width="160"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="1111,319,0,0" VerticalAlignment="Top">
            <Button x:Name="CreateButton" Content="Create Product" Height="50" Width="165" 
                    Click="CreateButton_Click" Background="#4CAF50" Foreground="White" 
                    FontSize="16" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
            <Button x:Name="UpdateButton" Content="Update Product" Height="50" Width="165" 
                    Click="UpdateButton_Click" Background="#2196F3" Foreground="White" 
                    FontSize="16" FontWeight="Bold" BorderThickness="0" Cursor="Hand" 
                    Margin="0,10,0,0"/>
            <Button x:Name="DeleteButton" Content="Delete Product" Height="50" Width="165" 
                    Click="DeleteButton_Click" Background="#F44336" Foreground="White" 
                    FontSize="16" FontWeight="Bold" BorderThickness="0" Cursor="Hand" 
                    Margin="0,10,0,0"/>
            <Button x:Name="QuitButton" Content="Quit" Height="50" Width="165" 
                    Click="QuitButton_Click" Background="#9E9E9E" Foreground="White" 
                    FontSize="16" FontWeight="Bold" BorderThickness="0" Cursor="Hand" 
                    Margin="0,10,0,0"/>
            <Button x:Name="BuyButton" Content="Buy Product" Height="50" Width="165" 
            Click="BuyButton_Click" Background="#FF9800" Foreground="White" 
            FontSize="16" FontWeight="Bold" BorderThickness="0" Cursor="Hand" 
            Margin="0,10,0,0"/>

        </StackPanel>
        

    </Grid>
</Window>
