<Window x:Class="BeautySky.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeautySky"
        mc:Ignorable="d"
       Title="Product Detail" Height="750" Width="1145" Background="#FAF3E0" 
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Label x:Name="DetailWindowModeLabel" Content="Create | Update Product" 
               HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" FontSize="40" 
               Foreground="#333" Margin="0,20,0,0"/>
        
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Width="850" Height="500" 
                Background="White" CornerRadius="10" BorderBrush="Gray" BorderThickness="1">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Label Content="Product Name" FontSize="18" Foreground="#333" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="ProductNameTextBox" Grid.Row="0" Grid.Column="1" Height="30" Width="250"/>
                
                <Label Content="Price" FontSize="18" Foreground="#333" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="PriceTextBox" Grid.Row="1" Grid.Column="1" Height="30" Width="150"/>
                
                <Label Content="Quantity" FontSize="18" Foreground="#333" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="QuantityTextBox" Grid.Row="2" Grid.Column="1" Height="30" Width="150"/>
                
                <Label Content="Description" FontSize="18" Foreground="#333" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="DescriptionTextBox" Grid.Row="3" Grid.Column="1" Height="30" Width="350"/>
                
                <Label Content="Ingredient" FontSize="18" Foreground="#333" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="IngredientTextBox" Grid.Row="4" Grid.Column="1" Height="30" Width="350"/>
                
                <Label Content="Category" FontSize="18" Foreground="#333" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
                <ComboBox x:Name="CategoryIdComboBox" Grid.Row="5" Grid.Column="1" Height="30" Width="200"/>
                
                <Label Content="Skin Type ID" FontSize="18" Foreground="#333" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="SkinTypeIdTextBox" Grid.Row="6" Grid.Column="1" Height="30" Width="150"/>
            </Grid>
        </Border>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,40">
            <Button x:Name="SaveButton" Content="Save Product" Width="150" Height="50" Background="#4CAF50" Foreground="White" FontSize="18" Click="SaveButton_Click" Margin="20"/>
            <Button x:Name="CloseButton" Content="Close" Width="150" Height="50" Background="#F44336" Foreground="White" FontSize="18" Click="CloseButton_Click" Margin="20"/>
        </StackPanel>
    </Grid>

</Window>
