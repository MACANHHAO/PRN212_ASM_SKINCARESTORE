<Window x:Class="BeautySky.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeautySky"
        mc:Ignorable="d"
        Title="ManagerWindow" Height="450" Width="800">
    <Grid>
        <!-- Danh sách User -->
        <DataGrid x:Name="UserDataGrid" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="300"
                  AutoGenerateColumns="True" SelectionMode="Single"/>

        <!-- Nút thao tác -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,10">
            <Button x:Name="UpdateButton" Content="Update User" Width="120" Margin="10" Click="UpdateButton_Click"/>
            <Button x:Name="DeleteButton" Content="Delete User" Width="120" Margin="10" Click="DeleteButton_Click"/>
            <Button x:Name="QuitButton" Content="Quit" Width="120" Margin="10" Click="QuitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
