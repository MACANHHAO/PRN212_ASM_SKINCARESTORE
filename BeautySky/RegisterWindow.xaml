<Window x:Class="BeautySky.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeautySky"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="750" Width="1145" Background="#FAF3E0" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Create Account" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" FontSize="50" Margin="0,20,0,0"/>

        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Width="800" Height="500" Background="White" CornerRadius="10" BorderBrush="Gray" BorderThickness="1">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Content="Username" FontSize="20" Foreground="Black" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="UserNameTextBox" Grid.Row="0" Grid.Column="1" Height="30" Width="250"/>

                <Label Content="Fullname" FontSize="20" Foreground="Black" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="FullnameTextBox" Grid.Row="1" Grid.Column="1" Height="30" Width="250"/>

                <Label Content="Email" FontSize="20" Foreground="Black" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="EmailTextBox" Grid.Row="2" Grid.Column="1" Height="30" Width="250"/>

                <Label Content="Password" FontSize="20" Foreground="Black" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                <PasswordBox x:Name="PasswordBox" Grid.Row="3" Grid.Column="1" Height="30" Width="250"/>

                <Label Content="Confirm Password" FontSize="20" Foreground="Black" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="0,0,560,0"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="4" Grid.Column="1" Height="30" Width="250"/>

                <Label Content="Phone" FontSize="20" Foreground="Black" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="PhoneTextBox" Grid.Row="5" Grid.Column="1" Height="30" Width="250"/>

                <Label Content="Role" FontSize="20" Foreground="Black" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center"/>
                <ComboBox x:Name="RoleIDComboBox" Grid.Row="6" Grid.Column="1" Height="30" Width="150"/>
            </Grid>
        </Border>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,40">
            <Button  x:Name="DetailWindowModeLabel" Content="Create" Width="120" Height="50" Background="#4CAF50" Foreground="White" FontSize="18" Click="Button_Click" Margin="20"/>
            <Button Content="Quit" Width="120" Height="50" Background="#F44336" Foreground="White" FontSize="18" Click="Button_Click_1" Margin="20"/>
        </StackPanel>
    </Grid>
</Window>
